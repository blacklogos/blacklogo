{
  "name": "Claude Code for Marketers",
  "version": "1.0.0",
  "description": "Interactive course teaching marketers how to use Claude Code for marketing workflows",
  "customCommands": {
    "enabled": true,
    "commandsDirectory": ".claude/commands"
  },
  "agents": {
    "enabled": true,
    "agentsDirectory": ".claude/agents"
  },
  "projectMemory": {
    "enabled": true,
    "contextFiles": ["CLAUDE.md"]
  },
  "modules": [
    {
      "id": "module-0",
      "name": "Getting Started",
      "lessons": ["0.0-introduction", "0.1-installation", "0.2-start-clone"]
    },
    {
      "id": "module-1",
      "name": "Core Concepts",
      "lessons": ["1.1-welcome", "1.2-working-with-files", "1.3-first-tasks", "1.4-agents", "1.5-custom-agents", "1.6-project-memory", "1.7-navigation"]
    },
    {
      "id": "module-2",
      "name": "Advanced Applications",
      "lessons": ["2.1-campaign-brief", "2.2-content-strategy", "2.3-marketing-copy", "2.4-analytics", "2.5-competitive-analysis", "2.6-seo-optimization"]
    }
  ]
}
